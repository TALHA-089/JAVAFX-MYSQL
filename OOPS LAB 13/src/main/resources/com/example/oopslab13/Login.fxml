            </VBox.margin>
            <font>
                <Font name="Arial Black" size="18.0" />
            </font>
        </Label>
        <TextField fx:id="tfEnrollment">
            <VBox.margin>
                <Insets left="100.0" right="100.0" />
            </VBox.margin>
        </TextField>
        <Label layoutX="10.0" layoutY="10.0" text="PASSWORD" textFill="#ecff5e">
            <VBox.margin>
                <Insets bottom="5.0" left="100.0" right="100.0" top="50.0" />
            </VBox.margin>
            <font>
                <Font name="Arial Black" size="18.0" />
            </font>
        </Label>
        <PasswordField fx:id="pfPassword">
            <VBox.margin>
                <Insets left="100.0" right="100.0" />
            </VBox.margin>
